{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OS",
            "type": "shell",
            "linux": {
                "command": "cd physical && make clean && make"
            }
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "isBackground": true,
            "windows": {
                "command": "start -FilePath 'qemu-system-x86_64' -ArgumentList '-S -gdb tcp::1234 -boot hda disk.img -m 2048'"
            },
            "linux": {
                "command": "qemu-system-x86_64 -L ${workspaceFolder}/boot/uefi -pflash ${workspaceFolder}/boot/uefi/OVMF.fd -S -s -hda ${workspaceFolder}/disk.img -m 2048"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "beginsPattern": "disk.img",
                    "endsPattern": "raw"
                }
            }
        }
    ]
}